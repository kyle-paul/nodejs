{{!-- <h1>{{models}}</h1> --}}
{{!-- this  = document --}}
<div class="mt-4">
    <div class="row">

        {{#each models}}
        <div class="col-sm-6 col-lg-4">
            <div class="card card-model-item">
                <a href="/machine_learning/{{this.slug}}">
                <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
                </a>
                <div class="card-body">
                    <a href="machine_learning/{{this.slug}}">
                    <h5 class="card-title">{{this.name}}</h5>
                    </a>
                    <p class="card-text">{{this.description}}</p>
                    <a href="/machine_learning/{{this.slug}}" class="btn btn-primary">View now</a>
                </div>
            </div>
        </div>
        {{/each}}
        
    </div>
</div>